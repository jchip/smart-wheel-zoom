{
  "manifest_version": 3,
  "name": "Smart Wheel Zoom",
  "version": "1.0",
  "description": "Smart handling of Ctrl + mouse scroll wheel to prevent accidental zoom",
  "homepage_url": "https://github.com/jchip/smart-wheel-zoom",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "96": "images/icon96.png",
    "128": "images/icon128.png",
    "256": "images/icon256.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": ["activeTab", "scripting"]
}
